[mergetool]
	keepBackup = false
	prompt = false
[mergetool "nvim"]
	cmd = nvim -f -c \"DiffviewOpen\"
[merge]
	tool = nvim
    conflictstyle = diff3
[pull]
	ff = only

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true
	; syntax-theme = GitHub

[diff]
	tool = nvimdiff
    conflictstyle = diff3
    colorMoved = default

[push]
	autoSetupRemote = true

[alias]
    commit-push = "!f() { git commit -m \"$1\" && git push; }; f"
    cop = "!f() { git commit -m \"$1\" && git push; }; f"
    checkout-pull = "!f() { git checkout \"$1\" && git pull; }; f"
    chp = "!f() { git checkout \"$1\" && git pull; }; f"
    main = "!f() { git checkout main && git pull; }; f"
    fork = "!f() { git checkout main && git pull && git checkout -b \"$1\"; }; f"
    mergetool = "!nvim -c DiffviewOpen"
    dt = "! args=$@; shift $#; nvim -c \"DiffviewOpen $args\""
	mt = "mergetool"
